<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseSelectedActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="602dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/menuBarlinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:text="Exercises"
            android:textSize="50px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exerciseButton1"
                android:textSize="20sp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginRight="80sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="어깨운동"
                android:background="@drawable/exercise1" />

            <Button
                android:id="@+id/exerciseButton2"
                android:text="등 운동"
                android:textSize="20sp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="20px"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/exercise2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exerciseButton3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginRight="80sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="가슴운동"
                android:background="@drawable/exercise3"/>

            <Button
                android:id="@+id/exerciseButton4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="20px"
                android:textStyle="bold"
                android:gravity="center"
                android:text="팔운동"
                android:background="@drawable/exercise4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exerciseButton5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginRight="80sp"
                android:gravity="center"
                android:text="하체운동"
                android:background="@drawable/exercise6" />

            <Button
                android:id="@+id/exerciseButton6"
                android:text="유산소 운동"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/exercise7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exerciseButton7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginRight="80sp"
                android:gravity="center"
                android:text="맨몸운동"
                android:textStyle="bold"
                android:background="@drawable/exercise5" />

            <Button
                android:id="@+id/exerciseButton8"
                android:layout_width="120dp"
                android:textStyle="bold"
                android:layout_height="120dp"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:text="기타"
                android:background="@drawable/exercise8"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/menuFragmentFrame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"></FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>