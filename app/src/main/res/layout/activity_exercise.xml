<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseSelectedActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="602dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/menuBarlinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Exercises"
            android:textSize="50px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/exerciseButton1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginRight="80sp"
                android:background="@drawable/button_radius"
                android:gravity="center"
                android:src="@drawable/ic_baseline_home_24" />

            <ImageButton
                android:id="@+id/exerciseButton2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="20px"
                android:background="@drawable/button_radius"
                android:gravity="center"
                android:src="@drawable/ic_baseline_home_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/exerciseButton3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginRight="80sp"
                android:background="@drawable/button_radius"
                android:gravity="center"
                android:src="@drawable/ic_baseline_home_24" />

            <ImageButton
                android:id="@+id/exerciseButton4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="20px"
                android:background="@drawable/button_radius"
                android:gravity="center"
                android:src="@drawable/ic_baseline_home_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/exerciseButton5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginRight="80sp"
                android:background="@drawable/button_radius"
                android:gravity="center"
                android:src="@drawable/ic_baseline_home_24" />

            <ImageButton
                android:id="@+id/exerciseButton6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="20px"
                android:background="@drawable/button_radius"
                android:gravity="center"
                android:src="@drawable/ic_baseline_home_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/exerciseButton7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginRight="80sp"
                android:background="@drawable/button_radius"
                android:gravity="center"
                android:src="@drawable/ic_baseline_home_24" />

            <ImageButton
                android:id="@+id/exerciseButton8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="20px"
                android:background="@drawable/button_radius"
                android:gravity="center"
                android:src="@drawable/ic_baseline_home_24" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/menuFragmentFrame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"></FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>