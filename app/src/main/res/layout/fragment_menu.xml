<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MenuFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/menuBarlinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_home_24"
            android:tint="@color/main_c"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/exerciseButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_fitness_center_24"
            android:tint="@color/main_c"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/calenderButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_calendar_today_24"
            android:tint="@color/main_c"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/myPageButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_person_outline_24"
            android:tint="@color/main_c"
            tools:ignore="UseAppTint" />
    </LinearLayout>

</FrameLayout>