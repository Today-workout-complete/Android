<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/routinNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RoutinName"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/exerciseCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="exerciseCount, lastExerciseTimeTook"
            android:textSize="14dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lastExerciseDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lastTime: "
            android:textSize="14dp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/routinModifyLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        tools:visibility="gone">

        <Button
            android:id="@+id/routinNameModifyButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="이름 수정"
            tools:visibility="visible" />

        <Button
            android:id="@+id/routinDeleteButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:text="삭제"
            tools:visibility="visible" />
    </LinearLayout>

</LinearLayout>